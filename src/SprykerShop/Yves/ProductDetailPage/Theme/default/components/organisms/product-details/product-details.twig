{% extends model('component') %}

{% set config = {
    name: 'product-details',
    tag: 'section'
} | merge(config | default({})) %}

{% set data = {
    description: data.description | default(''),
    attributes: data.attributes | default([])
} | merge(data | default({})) %}

{% block body %}
    <h5>{{ 'product.attribute.long_description' | trans }}</h5>
    <p>{{ data.description }}</p>

    <h5>{{ 'page.product.details' | trans }}</h5>
    <div class="grid">
        {% for attributeName, attributeValue in data.attributes if attributeName  %}
            <p class="col col--sm-12 col--md-6 col--lg-4 col--xl-3" itemprop="additionalProperty" itemscope itemtype="http://schema.org/PropertyValue">
                <strong itemprop="name">{{ ('product.attribute.'~attributeName) | trans }}</strong><br/>
                <span itemprop="value">{{ attributeValue }}</span>
            </p>
        {% endfor %}
    </div>
{% endblock %}
