{% extends model('component') %}

{% define config = {
    name: 'product-carousel',
    tag: 'section'
} %}

{% define data = {
    product: required
} %}

{% block body %}
    {% widget 'ProductImageSliderWidget' args [data.product.idProductAbstract] only %}
    {% elsewidget 'ProductImageWidgetPlugin' args [data.product] only %} {# @deprecated Use ProductImageSliderWidget instead. #}
    {% endwidget %}

    {% widget 'ProductAbstractLabelWidget' args [data.product.idProductAbstract] only %}
    {% elsewidget 'ProductAbstractLabelWidgetPlugin' args [data.product] only %} {# @deprecated Use ProductAbstractLabelWidget instead. #}
    {% endwidget %}
{% endblock %}
