{% extends model('component') %}

{% define config = {
    name: 'product-detail',
    tag: 'section'
} %}

{% define data = {
    description: '',
    attributes: []
} %}

{% block body %}
    <h5>{{ 'product.attribute.long_description' | trans }}</h5>
    <p>{{ data.description }}</p>

    <h5>{{ 'page.product.details' | trans }}</h5>
    <div class="grid">
        {% for name, value in data.attributes if name %}
            <p class="col col--sm-12 col--md-6 col--lg-4 col--xl-3" itemprop="additionalProperty" itemscope itemtype="http://schema.org/PropertyValue">
                <strong itemprop="name">{{ ('product.attribute.' ~ name) | trans }}</strong><br>
                <span itemprop="value">{{ value }}</span>
            </p>
        {% endfor %}
    </div>
{% endblock %}
